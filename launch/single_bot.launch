<launch>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gazebo_simulation)/worlds/scene2.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
    <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
    
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    
    <arg name="x_pos" default="1"/>
    <arg name="y_pos" default="1"/>
    <arg name="z_pos" default="0"/>

    <arg name="target_x_pos" default="0"/>
    <arg name="target_y_pos" default="0"/>
    <arg name="target_z_pos" default="0"/>

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
     args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description "  />  

    <node pkg="sc649_final_project" type="controller.py" name="controller" output="screen" args = "-x $(arg target_x_pos) -y $(arg target_y_pos) -z $(arg target_z_pos)"/>
</launch>
